<div>
<h1 class="new-h1">
  Sign-Up (to access the most yummy recipes)</h1>
<div class="new-content">
  <%= form_for(@user) do |f| %>
     <%= f.label :name %>
     <%= f.text_field :name %>
     <br /> 
     <%= f.label :email %>
     <%= f.text_field :email %>
		 <br />
		 <%= f.label :password %>
		 <%= f.password_field :password %>
		 <br />
		 <%= f.label :password_confirmation, "Confirmation" %>
		 <%= f.password_field :password_confirmation %>
		 <br />


     <br />
     <br />
    
     <%= f.submit "Create account", class: "new-button" %>

  <% end %>
 
</div>
</div>
