<% provide(:title, 'Sign In') %>

<div>
<div class="row-fluid">
<h1 class="span11 offset1"> Sign In </h1> 
</div>
 
<div class="row-fluid">
  <div class="span6 offset2">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <br/>
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>


    <p>New user?  <i class="icon-user"></i>  <%= link_to "Sign up now!", signup_path  %></p>
  </div>
</div>
